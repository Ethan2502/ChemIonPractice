{
    "version": 2,
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/api/debug",
            "destination": "/api/debug.ts"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.ts": {
            "includeFiles": "server/prisma/**",
            "maxDuration": 10
        },
        "api/debug.ts": {
            "maxDuration": 5
        }
    }
}