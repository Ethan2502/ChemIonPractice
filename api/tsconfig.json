{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*",
                "../server/node_modules/*"
            ]
        }
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}